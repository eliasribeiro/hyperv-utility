<Page x:Class="HyperVUtilities.Pages.GpuPassthroughPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Criar VM com GPU (Passthrough)">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="ðŸŽ® Criar VM com GPU (Passthrough)" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Esta funcionalidade permite criar uma VM Windows 11 com acesso direto Ã  GPU do host (GPU Passthrough)." 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Foreground="Gray"
                       Margin="0,0,0,20"/>

            <!-- DetecÃ§Ã£o de GPUs Card -->
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,0,0,15"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="ðŸ” DetecÃ§Ã£o de GPUs CompatÃ­veis" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>
                    
                    <Button Name="DetectGpuButton" 
                            Content="ðŸ” Detectar GPUs" 
                            Background="#007ACC" 
                            Foreground="White" 
                            FontSize="14" 
                            Padding="15,8" 
                            Click="DetectGpuButton_Click"
                            Margin="0,0,0,15"/>
                    
                    <!-- Lista de GPUs detectadas -->
                    <StackPanel Name="GpuListPanel" Visibility="Collapsed">
                        <TextBlock Text="GPUs CompatÃ­veis Encontradas:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,10"/>
                        
                        <ItemsControl Name="GpuItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F0F8FF" 
                                            CornerRadius="5" 
                                            Padding="10" 
                                            Margin="0,0,0,5">
                                        <TextBlock Text="{Binding}" 
                                                   FontFamily="Consolas" 
                                                   FontSize="12"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ConfiguraÃ§Ã£o da VM -->
            <Border Background="White" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,20,0,0">
                
                <StackPanel>
                    <TextBlock Text="âš™ï¸ ConfiguraÃ§Ã£o da VM" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>
                    
                    <!-- Nome da VM -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Nome da VM:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Medium"/>
                        
                        <TextBox Grid.Column="1" 
                                 Name="VmNameTextBox" 
                                 Height="30" 
                                 Text="GPUVM" 
                                 VerticalContentAlignment="Center" 
                                 Padding="8,0"/>
                    </Grid>

                    <!-- Nome da GPU -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Nome da GPU:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Medium"/>
                        
                        <ComboBox Grid.Column="1" 
                                  Name="GpuComboBox" 
                                  Height="30" 
                                  VerticalContentAlignment="Center"/>
                    </Grid>
                    
                    <!-- GPU Allocation -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="AlocaÃ§Ã£o da GPU:" 
                                   Width="120" 
                                   VerticalAlignment="Center"/>
                        <TextBox Name="GpuAllocationTextBox" 
                                 Width="100" 
                                 Height="30" 
                                 Text="50" 
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Text="%" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <!-- ISO File -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="ISO Windows 11:" 
                                   Width="120" 
                                   VerticalAlignment="Center"/>
                        <TextBox Name="IsoPathTextBox" 
                                 Width="250" 
                                 Height="30" 
                                 VerticalContentAlignment="Center"/>
                        <Button Name="BrowseIsoButton" 
                                Content="ðŸ“" 
                                Width="30" 
                                Height="30" 
                                Margin="5,0,0,0" 
                                Click="BrowseIsoButton_Click"/>
                    </StackPanel>
                    
                    <!-- HD Size -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Tamanho do HD:" 
                                   Width="120" 
                                   VerticalAlignment="Center"/>
                        <TextBox Name="HdSizeTextBox" 
                                 Width="100" 
                                 Height="30" 
                                 Text="40" 
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Text="GB" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <!-- RAM Size -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Tamanho da RAM:" 
                                   Width="120" 
                                   VerticalAlignment="Center"/>
                        <TextBox Name="RamSizeTextBox" 
                                 Width="100" 
                                 Height="30" 
                                 Text="8" 
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Text="GB" 
                                   VerticalAlignment="Center" 
                                   Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <!-- VHD Path -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Local do HD Virtual:" 
                                   Width="120" 
                                   VerticalAlignment="Center"/>
                        <TextBox Name="VhdPathTextBox" 
                                 Width="250" 
                                 Height="30" 
                                 VerticalContentAlignment="Center"/>
                        <Button Name="BrowseVhdPathButton" 
                                Content="ðŸ“" 
                                Width="30" 
                                Height="30" 
                                Margin="5,0,0,0" 
                                Click="BrowseVhdPathButton_Click"/>
                    </StackPanel>
                    
                    <!-- Username -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="UsuÃ¡rio:" 
                                   Width="120" 
                                   VerticalAlignment="Center"/>
                        <TextBox Name="UsernameTextBox" 
                                 Width="300" 
                                 Height="30" 
                                 Text="GPUVM" 
                                 VerticalContentAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Password -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Senha:" 
                                   Width="120" 
                                   VerticalAlignment="Center"/>
                        <TextBox Name="PasswordTextBox" 
                                 Width="300" 
                                 Height="30" 
                                 VerticalContentAlignment="Center"/>
                        <TextBlock Text="(opcional)" 
                                   VerticalAlignment="Center" 
                                   Foreground="Gray" 
                                   Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <!-- AutoLogon -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="AutoLogon:" 
                                   Width="120" 
                                   VerticalAlignment="Center"/>
                        <CheckBox Name="AutoLogonCheckBox" 
                                  IsChecked="True" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Create VM Button -->
                    <Button Name="CreateVmButton" 
                            Content="ðŸš€ Criar VM com GPU Passthrough" 
                            Background="#28A745" 
                            Foreground="White" 
                            FontSize="14" 
                            FontWeight="SemiBold" 
                            Padding="20,10" 
                            Click="CreateVmButton_Click"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Status Card -->
            <Border Name="StatusCard" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20" 
                    Margin="0,0,0,15"
                    Visibility="Collapsed"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="ðŸ“Š Status da CriaÃ§Ã£o" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Name="StatusTextBlock" 
                               Text="Preparando para criar VM..." 
                               FontSize="14" 
                               Margin="0,0,0,10"/>
                    
                    <ProgressBar Name="ProgressBar" 
                                 Height="20" 
                                 Minimum="0" 
                                 Maximum="100" 
                                 Value="0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page> 